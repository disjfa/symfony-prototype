{% extends "admin.html.twig" %}

{% block body %}
    <div class="container py-3">
        <h1>Calendar</h1>
        <hr>
        <div id="calendar"></div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/@fullcalendar/core/main.css">
    <link rel="stylesheet" href="https://unpkg.com/@fullcalendar/daygrid/main.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/@fullcalendar/core/main.min.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@fullcalendar/daygrid/main.min.js" crossorigin="anonymous"></script>

    <script>
    document.addEventListener('DOMContentLoaded', function () {
      var calendarEl = document.getElementById('calendar');

      var calendar = new FullCalendar.Calendar(calendarEl, {
        events: '/api/calendar',
        plugins: ['dayGrid']
      });

      calendar.render();
    });

    </script>
{% endblock %}

