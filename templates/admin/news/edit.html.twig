{% extends 'admin.html.twig' %}

{% block body %}
    <div class="container py-3">
        <h1>Edit news</h1>
        <a href="{{ path('admin_news_view') }}" class="btn btn-outline-primary">
            <i class="fad fa-arrow-left"></i>
            Back
        </a>
        <hr>
        {{ form_start(form) }}
