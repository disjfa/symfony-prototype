{% extends 'base.html.twig' %}

{% block title %}Home! - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container py-3">
        <h1>Carousel</h1>
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <div class="carousel-indicators">
                {% for item in images %}
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{ loop.index0 }}"{% if loop.first %} class="active" aria-current="true" aria-label="Slide {{ loop.index }}"{% endif %}></button>
                {% endfor %}
            </div>
            <div class="carousel-inner">
                {% for item in images %}
                    <div class="carousel-item{% if loop.first %} active{% endif %}">
                        <div class="ratio ratio-16x9 bg-dark img-cover" style="background-image: url({{ item.image }});">
                        </div>
                        <div class="carousel-caption d-none d-md-block">
                            <h5>{{ item.name }}</h5>
                            <p>{{ item.caption }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="container py-3">
        <h1>News</h1>
        <div class="card-group">
            {% for item in news %}
                <div class="card">
                    <div class="ratio ratio-16x9 bg-dark card-img-top">
                        <img src="{{ item.image }}" class="card-img-top" alt="{{ item.title }}" loading="lazy">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ item.title }}</h5>
                        <p class="card-text">
                            {{ item.intro }}
                        </p>
                        <p class="card-text">
                            <small class="text-muted">{{ item.datePublished | date }}</small>
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
