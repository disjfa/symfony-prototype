{% extends 'base.html.twig' %}

{% block title %}Home! - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container py-3">
        <h1>Carousel</h1>
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for item in images %}
                    <li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index0 }}"{% if loop.first %} class="active"{% endif %}></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% for item in images %}
                    <div class="carousel-item{% if loop.first %} active{% endif %}">
                        <img src="{{ item.image }}" class="d-block w-100" alt="{{ item.name }}">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>{{ item.name }}</h5>
                            <p>{{ item.caption }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="container py-3">
        <h1>News</h1>
        <div class="card-deck">
            {% for item in news %}
                <div class="card">
                    <img src="{{ item.image }}" class="card-img-top" alt="{{ item.title }}" loading="lazy">
                    <div class="card-body">
                        <h5 class="card-title">{{ item.title }}</h5>
                        <p class="card-text">
                            {{ item.intro }}
                        </p>
                        <p class="card-text">
                            <small class="text-muted">{{ item.datePublished | date }}</small>
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
